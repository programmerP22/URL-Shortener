<div class="mt-4 d-flex flex-column align-items-center text-center">
  <h3>Success! Please use this link:</h3>
  <p id="generatedURL">{{baseURL}}/{{ shortURL }}</p>
</div>
<div class="mx-auto" style="width: 14vw;">
  <button class="btn btn-primary fs-6" id="copy" style="width: 14vw" onclick="copy()">Copy</button>
</div>

<script>
  function copy() {
    const copiedURL = document.getElementById("generatedURL").textContent
    navigator.clipboard.writeText(copiedURL)
      .then(() => alert(`shortened URL: ${copiedURL} has been copied`))
      .catch(error => console.log(error))
  }
</script>